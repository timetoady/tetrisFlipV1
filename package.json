{
  "name": "tetris-flip-v1",
  "private": true,
  "version": "1.0.0",
  "description": "Tetris Flip is a single-player puzzle game with a dual-field flip mechanic.",
  "author": "Timetoady",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "dist": "npm run build:renderer && electron-builder",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-updater": "^6.7.3",
    "patch-package": "^8.0.0",
    "vite": "^7.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.timetoady.tetrisflip",
    "productName": "Tetris Flip",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "overrides": {
    "@electron/rebuild": "4.0.2",
    "tar": "7.5.3"
  }
}
